{% extends 'base.html.twig' %}

{% block title %}Pokemon Grid{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('pokemon_grid') }}
{% endblock %}

{% block body %}

{% dump pokemons %}


	<h1>Grille des Pokémon</h1>

	<table class="table">
		<thead>
		{# tr stands for row #}
		<tr>
			<div class="alert alert-primary">
				Clique sur le Pokémon voulu pour voir ses informations !
			</div>
		</tr>
		</thead>

		<tbody>


		{# Make a loop in body to fill table with all available pokemon #}
		{% set i = 0 %}
		<tr>
		{% for pokemon in pokemons %}

			{# One <td> by Pokemon #}
			<td>
				<h5>{{ pokemon.name }}</h5>
				<img src="{{ asset('build/assets/images/sprites/placeholder64.png') }}">
				<p>
					<a>
						<button type="button" class="btn btn-outline-primary">
							Voir les infos
						</button>
					</a>
				</p>
			</td>

			{% if i is divisible by(4) %}
				{% if i != 0 %}
					{# close current row #}
					</tr><tr>
				{% endif %}

			{% endif %}

			{% set i = i+1 %}
		{% endfor %}
		</tr>

		</tbody>
	</table>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('pokemon_grid') }}
{% endblock %}
